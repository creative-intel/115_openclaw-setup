    <array>
        <string>/bin/bash</string>
        <string>REPLACE_WITH_YOUR_PATH/50_tools/memory-refresh.sh</string>
    </array>
    <key>StartCalendarInterval</key>
    <dict>
        <key>Hour</key>
        <integer>2</integer>
        <key>Minute</key>
        <integer>0</integer>
    </dict>
    <key>StandardOutPath</key>
    <string>REPLACE_WITH_YOUR_PATH/90_state/memory-refresh.log</string>
    <key>StandardErrorPath</key>
    <string>REPLACE_WITH_YOUR_PATH/90_state/memory-refresh.log</string>
    <key>RunAtLoad</key>
    <false/>
</dict>
</plist>
